{
  "extends": "tslint-config-airbnb",
  "rules": {
    "variable-name": {
      "options": [
        "allow-pascal-case",
        "allow-leading-underscore"
      ]
    },
    "import-name": false,
    "function-name": [
      true,
      {
        "method-regex": "^\\*?\\[?[a-z][\\w\\d\\.]*\\]?$",
        "private-method-regex": "^\\*?\\[?[a-z][\\w\\d\\.]*\\]?$",
        "protected-method-regex": "^\\*?\\[?[a-z][\\w\\d\\.]*\\]?$",
        "static-method-regex": "^\\*?\\[?[a-z][\\w\\d\\.]*\\]?$",
        "function-regex": "^\\*?\\[?[a-zA-Z][\\w\\d\\.]*\\]?$",
        "import-name": false
      }
    ]
  }
}